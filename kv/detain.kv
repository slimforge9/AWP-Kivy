<Detain>
    container: container
    rows: 3

    AnchorLayout:
        anchor_y: 'top'

        Label:
            text: "Dane osoby"
            font_size: 20
            pos: 0, 200
            size_hint: 1, 0.6
            size: (20,30)
            background_color: (0, 0, 1, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos


    BoxLayout:
        pos_hint: {"top": 1, "center_x": .5}
        size_hint_x: 0.2
        size_hint_y: 1.5
        ScrollView:
            size_hint_y: 1
            pos_hint: {'x': 0, 'y': .11}
            padding: 50
            spacing: 50
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: container
                height: self.minimum_height  # required to size GridLayout
                cols:2
                size_hint_y: None
                spacing: 30


                #Imie Matki
                ItemLabel:
                    text: "Imię Matki"
                TextInput:
                    id: matka
                    text: ""

                #Nazwisko rodowe Matki
                ItemLabel:
                    text: "Nazwisko\nRodowe Matki"
                TextInput:
                    id: rod_matka
                    text: ""

                #PESEL
                ItemLabel:
                    text: "PESEL"
                TextInput:
                    id: pesel
                    text: ""

                # Miejsce urodzenia
                ItemLabel:
                    text: "Miejsce urodzenia"
                TextInput:
                    id: msc_ur
                    text: ""

                # Miejsce zamieszkania
                ItemLabel:
                    text: "Miejsce\nzamieszkania"
                TextInput:
                    id: zam
                    text: ""

                # Zajęcie
                ItemLabel:
                    text: "Zajęcie"
                TextInput:
                    id: job
                    text: ""

                # Dokument stwierdzający tożsamość
                ItemLabel:
                    text: "Dokument\nstwierdzający\ntożsamość"
                TextInput:
                    id: dok
                    text: ""
                ItemLabel:
                    text: ""






    BoxLayout:
        Button:
            font_size: 20
            pos: 0, 200
            size_hint: 1, 0.5
            size: (20,30)
            text: 'Wstecz'
            on_release:
                app.change_screen("kreator")
                root.manager.transition.direction = 'right'
        Button:
            font_size: 20
            pos: 0, 200
            size_hint: 1, 0.5
            size: (20,30)
            text: 'Dalej'

            on_release:
                root.manager.transition.direction = 'left'
                app.change_screen(app.next_doc())


