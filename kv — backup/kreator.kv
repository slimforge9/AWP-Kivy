<Creator>
    FloatLayout:
        BoxLayout:
            orientation: 'vertical'
            #size: root.width, root.height
            Label:
                text: "Kreator"
                font_size: 20
                pos: 0, 200
                size_hint: 1, 0.5
                size: (20,30)
                background_color: (0, 0, 1, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos


            BoxLayout:
                cols: 2
                orientation: 'horizontal'

                Label:
                    text: "Wybierz dokumenty do sporzadzenia"
                    font_size: 20
                CheckBox:
                    on_active: root.checkbox_click(self, self.active)



